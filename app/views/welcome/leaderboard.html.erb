<% if @users.any? %>
  <h4>Winner is <b><%= @users.first.name %></b></h4>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Points</th>
          <th>Total Correct Predictions</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td width="20%"><%= image_tag user.image_url %></td>
          <td width="30%"><%= user.name %></td>
          <td width="30%"><b><%= user.points %></b></td>
          <td><%= user.correct_predictions %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
