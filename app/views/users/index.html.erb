<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Bracket</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.bracket %></td>
      <td>
        <% if user.approved? %>
          Approved!
        <% else %>
          <%= link_to 'Approve', approve_user_path(user), method: :put %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
